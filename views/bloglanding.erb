<article>

  <form class="search" action="/search" method="post">
    Search all posts:<br/>
    <input type="text" name="search" placeholder="keyword">
    <input class="btn" type="submit" value="Search">
  </form>

  <section class="blog-landing-image">
    <img src="/images/keyboard.jpg" alt="keyboard">
  </section>

  <section class="blog-list blog-landing-list">
      <hgroup><h3>Blog Posts</h3></hgroup>
      <% @posts.each do |post| %>
        <a href="<%= post.url %>"><%= post.title%></a><br/>
        <%= post.excerpt %>...<br/><br/>
      <% end %>
  </section>
</article>
